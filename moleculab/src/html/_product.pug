section.product
    .product__container
        
        - const productPage = true;
        include _breadcrumbs

        .product__header.header-product 
            .header-product__gallery.product-gallery
                ul.product-gallery__list 
                    li.product-gallery__item._current-slide
                        img(src="@img/product/item-1.png", alt="product")
                    li.product-gallery__item
                        img(src="@img/product/item-2.png", alt="product")
                    li.product-gallery__item
                        img(src="@img/product/item-1.png", alt="product")
                    li.product-gallery__item
                        img(src="@img/product/item-2.png", alt="product")
                .product-gallery__main
                    .product__slider.swiper
                        .product-item__label._popular.product-gallery__label Популярное
                        .product__wrapper.swiper-wrapper
                            .product-gallery__slide.swiper-slide
                                img(src="@img/product/item-big-1.png", alt="")
                            .product-gallery__slide.swiper-slide
                                img(src="@img/product/item-big-1.png", alt="")
                            .product-gallery__slide.swiper-slide
                                img(src="@img/product/item-big-1.png", alt="")
                            .product-gallery__slide.swiper-slide
                                img(src="@img/product/item-big-1.png", alt="")
                    .product__pagination.swiper-pagination
                     
            .header-product__content.content-product
                .content-product__top
                    h1.content-product__title УВЭЖХ система HELICON 1800 UHPLC с бинарным насосом
                    .content-product__icons  
                        span.icons-product__heart.content-product__icon.content-product__heart 
                            include icons/_heart
                        span.icons-product__comparison.content-product__icon.content-product__comparison
                            include icons/_comparison

                .content-product__middle
                    .product-item__prices.content-product__prices(itemscope="" itemprop="offers" itemtype="http://schema.org/Offer")
                        meta(itemprop='priceCurrency' content='RUB')
                        meta(itemprop='price' content='68334')
                        meta(itemprop='availability' content='http://schema.org/InStock')
                        span.content-product__price 68 334 ₽
                        span.content-product__price.content-product__price-old 100 334 ₽

                    .content-product__buttons
                        #product-counter.content-product__counter.counter-product
                            .counter-product__decrease
                                span –
                            span.current-quantity 1
                            .counter-product__increase
                                span +
                            input#product-quantity(type="number", name="product-quantit", hidden, value="0")

                        button#add-to-cart.button.content-product__button._to-cart В корзину
                        button.button._gradient.content-product__button._in-cart(data-text="В корзине")
                            span  В корзине
                        button.button._transparent.content-product__button Подобрать аналог
                        

                .content-product__bottom
                    ul.product-item__info.info-product.content-product__list
                        li.info-product__item.content-product__item Артикул:
                            span Wufeng HELICON 1800 type 9
                        li.info-product__item.content-product__item Производитель:
                            span Clinx
                        li.info-product__item.content-product__item Наличие:
                            span._limited Ограничено
                        li.info-product__item.content-product__item Регистрационное удостоверение:
                            span Отсутствует
                        li.info-product__item.content-product__item Регистрационное удостоверение:
                            span Отсутствует
                    #to-details.product-item__to.content-product__item
                        span Все характеристики
                        include icons/_arrow-down

        .product__description
            .description-top 
                h2.description-top__title Описание товара
                .description-top__body 
                    .description-top__text._less-text 
                        p Используя 20-летний опыт разработки, производства и обслуживания жидкостных хроматографов, 
