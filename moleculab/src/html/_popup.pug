#tender.popup._step-1(aria-hidden='true', data-single="true")
	.popup__wrapper
		.popup__content
			.popup__header
				button.popup__back._to-step-1
					include icons/_arrow-popup
				
				.popup__steps.steps-popup 
					.steps-popup__text 
						span.current-step._step-1 1
						span.current-step._step-2 2 
						span из 
						span.all-steps 2
					.steps-popup__fractions 
						.steps-popup__fraction
						.steps-popup__fraction

				button.popup__close(data-close='data-close' type='button')
					include icons/_close

			.popup__body
				h2.popup__title Введите данные
				p.popup__text 
					| Заполните данные для оформления тендера
				form(action="#", method="post").popup__form
					
					.step.step-1
						h3.popup__subtitle Личные данные
						.popup__inputs
							.popup__field
								label.popup__label Имя
								input#name-for-tender.popup__input(type="text", name="name", placeholder="Наталья", required)

							.popup__field
								label.popup__label Фамилия
								input#surname-for-tender.popup__input(type="text", name="surname", placeholder="Карандашова", required)

							.popup__field
								label.popup__label Отчество
								input#patronum-for-tender.popup__input(type="text", name="patronum", placeholder="Олеговна")

						h3.popup__subtitle Контакты
						.popup__inputs
							.popup__field
								label.popup__label Номер телефона
								input#number-for-tender.popup__input(type="tel", name="number", placeholder="+7 (___)___-__-__", required)
							
							.popup__field
								label.popup__label Почта
								input#email-for-tender.popup__input(type="email", name="email", placeholder="E-mail", required)
							
						button(type="text").button.popup__button._to-step-2 Далее
					
					.step.step-2
						h3.popup__subtitle Сведения об организации
						.popup__inputs
							.popup__field
								label.popup__label Наименование организации
								input#company-for-tender.popup__input(type="text", name="company", placeholder="ООО “ТоргДом”", required)

							.popup__field
								label.popup__label ИНН
								input#inn-for-tender.popup__input(type="number", name="inn", placeholder="1234567890", required)

							.popup__field
								label.popup__label Регион
								.popup-form__select.select
									.select__title.open-select
										span.current-value(data-current="") Выберите регион
										include icons/_arrow-down

									.select__hidden-block
										ul.select__list
											li.select__item(data-value="Москва") Москва
											li.select__item(data-value="Московская область") Московская область
											li.select__item(data-value="ЮФО") ЮФО
											li.select__item(data-value="СЗФО") СЗФО
											li.select__item(data-value="ЦФО") ЦФО

							.popup__field
								label.popup__label Город
								.popup-form__select.select
									.select__title.open-select
										span.current-value(data-current="") Выберите регион
										include icons/_arrow-down

									.select__hidden-block
										ul.select__list
											li.select__item(data-value="Москва") Москва
											li.select__item(data-value="Рязань") Рязань
											li.select__item(data-value="Казань") Казань
											li.select__item(data-value="Самара") Самара
											li.select__item(data-value="Санкт-Петербург") Санкт-Петербург
							
							.popup__field
								label.popup__label Улица
								input#street-for-tender.popup__input(type="text", name="street", placeholder="Введите адрес")

						h3.popup__subtitle Комментарий к заказу
						.popup__inputs
							textarea#comments.popup__textarea(name="comments") 
							
						button(type="text", disabled).button.popup__button Далее