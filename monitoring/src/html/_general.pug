                                .chart-item__track
                                    .chart-item__progress(style="width:80%")
                                        .chart-item__percent 80%
                            li.charts-block__chart.chart-item
                                h4.chart-item__title Стиль общения
                                .chart-item__track
                                    .chart-item__progress(style="width:80%")
                                        .chart-item__percent 80%
                            li.charts-block__chart.chart-item
                                h4.chart-item__title Параметры тура и потребности
                                .chart-item__track
                                    .chart-item__progress(style="width:80%")
                                        .chart-item__percent 80%
                            li.charts-block__chart.chart-item
                                h4.chart-item__title Подбор предложений и консультация
                                .chart-item__track
                                    .chart-item__progress(style="width:80%")
                                        .chart-item__percent 80%
                            li.charts-block__chart.chart-item
                                h4.chart-item__title Завершение звонка
                                .chart-item__track
                                    .chart-item__progress(style="width:80%")
                                        .chart-item__percent 80%

