section#general.general
    .general__container
        .general__body
            h1.general__title Стандарты Сети 
            .general__charts
                .charts-block
                    h3.general__subtitle Мониторинг офиса (результаты посденей анкеты)
                    .charts-block__body
                        .charts-block__circle.circle-chart(data-thickness="30" data-value="0.25") 
                            .circle-chart__percent 78%
                            button(type="button").circle-chart__icon
                                include icons/_eye
                        ul.charts-block__charts 
                            li.charts-block__chart.chart-item
                                h4.chart-item__title Внешний стандарт
                                .chart-item__track
                                    .chart-item__progress(style="width:80%")
                                        .chart-item__percent 80%
                            li.charts-block__chart.chart-item
                                h4.chart-item__title Внутренний страндарт
                                .chart-item__track
                                    .chart-item__progress(style="width:80%")
                                        .chart-item__percent 80%
                            li.charts-block__chart.chart-item
                                h4.chart-item__title Внутренний страндарт
                                .chart-item__track
                                    .chart-item__progress(style="width:80%")
                                        .chart-item__percent 80%
                            li.charts-block__chart.chart-item
                                h4.chart-item__title Деловой стандарт
                                .chart-item__track
                                    .chart-item__progress(style="width:80%")
                                        .chart-item__percent 80%
                            li.charts-block__chart.chart-item
                                h4.chart-item__title Рекламный стандарт
                                .chart-item__track
                                    .chart-item__progress(style="width:80%")
                                        .chart-item__percent 80%

                .charts-block
                    h3.general__subtitle Тайный покупатель (результаты последней анкеты)
                    .charts-block__body
                        .charts-block__circle.circle-chart(data-thickness="30" data-value="0.25") 
                            .circle-chart__percent 78%
