section.contacts#contacts
	.contacts__container
		h2.contacts__title Контакты
		form(action="#", method="post").contacts__form.form-contacts
			.form-field
				label Темы
				select(name="form[]").form.form-contacts__select
					option(value="", selected) Выберите тему
					option(value="2") Тема #2
					option(value="3") Тема #3
					option(value="4") Тема #4
			.form-field
				label Рекламная площадка
				select(name="form[]").form.form-contacts__select
					option(value="1", selected) Выберите площадку
					option(value="2") Площадка #2
					option(value="3") Площадка #3
					option(value="4") Площадка #4
			.form-field 
				label Email
				input#email(type="email", name="email", placeholder="").form-contacts__input
			.form-field
				label Комментарий
				textarea#commets(name="comments", cols="30", rows="5").form-contacts__textarea
			p.form-contacts__text Нажимая кнопку, вы соглашаетесь с нашим 
				a(href="#").form-contacts__link положением о конфиденциальности.
			button(type="submit").button.form-contacts__button 
				p Отправить
				p.gradient-text Отправить
				span.flare
		